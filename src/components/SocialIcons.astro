---
import type { Props } from '@astrojs/starlight/props'
import Default from '@astrojs/starlight/components/SocialIcons.astro'
---

<!-- Add custom social link with its SVG icon and a label. -->
<a href="https://schools.graniteschools.org/cottonwoodhigh/" rel="me" class="sl-flex astro-cwood">
  <span class="sr-only">Website</span>
  <svg
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
  height="16"
  width="16"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  >
    <path d="M19 17c.5 -1.242 2 -2 2 -5s-1 -9 -9 -9s-9 6 -9 9s1.495 3.749 2 5l-2 1l2 3l2.406 -1.147c1.25 -.714 1.778 -2.08 1.203 -3.363c-1.078 -2.407 -1.609 -8.49 3.391 -8.49s4.469 6.083 3.39 8.49c-.574 1.284 -.045 2.649 1.204 3.363l2.406 1.147l2 -3l-2 -1z" />
  </svg>
</a>

<!-- Render the default social links. -->
<Default {...Astro.props}><slot /></Default>

<!-- Add styles to mimic the default links appearance. -->
<style>
  a:where(.astro-cwood) {
    color: var(--sl-color-text-accent);
    margin: -0.5em;
    padding: 0.5em;
  }

  a:hover:where(.astro-cwood) {
    opacity: 0.66;
  }
</style>
